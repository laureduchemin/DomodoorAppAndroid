    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#c0cdf7">

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        app:srcCompat="@drawable/gates" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Domodoor"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="30sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Historique :"
        android:textStyle="bold"
        android:textSize="15sp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#cbcfd8">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Lexert Quentin - Fermeture - 12/02/18 12:00"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Lexert Quentin - Ouverture - 12/02/18 11:55"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Pascal AndrÃ© - Fermeture - 10/02/18 18:47"/>


    </RadioGroup>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:background="#dee2ed"
        android:id="@+id/searchView" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/searchView"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:text="Afficher" />

    </RelativeLayout>

</LinearLayout>